@{
	var X = Html.X();
}

@section content
{
	@X.TabPanel().BodyPadding(10).Items(
		X.Panel().Title("GridPanelFor")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("GridPanelFor", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			),
		X.Panel().Title("FormPanelFor")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("FormPanelFor", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			),
		X.Panel().Title("ModelBind")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("ModelBind", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			),
		X.Panel().Title("ColumnModel")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("ColumnModel", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			)
		)
}