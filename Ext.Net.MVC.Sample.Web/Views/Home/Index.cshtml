@{
	var X = Html.X();
}

@section content
{
	@X.TabPanel().DeferredRender(false).Layout(LayoutType.Fit).Items(
		X.Panel().Padding(10).Title("GridPanelFor")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("GridPanelFor", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			),
		X.Panel().Padding(10).Title("FormPanelFor")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("FormPanelFor", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			),
		X.Panel().Padding(10).Title("ColumnModel")
			.Loader(X.ComponentLoader()
				.Url(Url.Action("ColumnModel", "Model"))
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			)
		))
}