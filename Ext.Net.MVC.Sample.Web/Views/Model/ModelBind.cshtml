@using Ext.Net.MVC.Sample.Web.Models
@model UserViewModel

@{var X = Html.X();}

@section content
{
    @(X.FormPanel().Title("Simple Form Controls").DefaultAnchor("100%").Frame(true).Padding(10).Items(
          X.DisplayFieldFor(model => model.Id),
          X.TextFieldFor(model => model.Fullname),
          X.NumberFieldFor(model => model.Age),
          X.CheckboxFor(model => model.IsActive),
          X.DateFieldFor(model => model.Birthday),
          X.RadioGroupForEnum(model => model.Gender).FieldLabel("Gender"),
          X.ComboBoxFor(model => model.Gender).Editable(false),
          X.TextFieldFor(model => model.PhoneNumber)
          ))
    <asp:ContentPlaceHolder ID="MainContent" runat="server" name="MainContent">
        text
    </asp:ContentPlaceHolder>
}

@{
    var x = MainContent.
}
