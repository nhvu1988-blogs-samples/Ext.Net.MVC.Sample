@{
	Layout = "../Shared/_LayoutAbsolute.cshtml";
	var X = Html.X();
}

@section content
{
	@(
		X.Panel().Title("Absolute View").Frame(true)
			.Width(500)
			.Height(500)
			.X(50)
			.Y(50)
			.Loader(X.ComponentLoader()
				.Url("http://www.ext.net")
				.Mode(LoadMode.Frame)
				.LoadMask(lm => lm.ShowMask = true)
			)
	)
}
