@{var X = Html.X();}

@section content
{
	@(X.Container().Frame(true)
		  .Layout(LayoutType.Border)
		  .Items(
			  X.Container()//.Frame(true)
				  //.Title("Center Region = Page Content")
				  //.Html("<b>Center View is special region that will auto fill to fit the body with other regions</b>")
				  .Loader(X.ComponentLoader()
				  		.Url(Url.Action("GridPanelFor", "Model"))
				  		.Mode(LoadMode.Frame)
				  		.LoadMask(lm => lm.ShowMask = true)
				  	)
				  .Region(Region.Center),
			  X.Panel().Collapsible(true)
				  .Title("West Region")
				  .Html("West Region often contains navigation bar or menu bar" +
						"<br> - This region is set <b>max width to 200px</b>")
				  .MaxWidth(200)
				  .Region(Region.West),
			  X.Panel().Collapsible(true)
				  .Title("East Region")
				  .Html("East Region" +
						"<br> - We can setup width or height for each region without breaking others" +
						"<br> - This region is <b>auto fit width</b> to its content")
				  .Region(Region.East),
			  X.Panel().Collapsible(true)
				  .Title("North Region = Page Header")
				  .Html("North Region often contains page-header-items such as" +
						"<br> - Branch Image" +
						"<br> - Menu" +
						"<br> - Account Login" +
						"<br> This region is <b>auto fit height</b> with its content")
				  .Region(Region.North),
			  X.Panel().Collapsible(true)
				  .Title("South Region = Page Footer")
				  .Height(200)
				  .Html("South Region often contains page-header-items" +
						"<br> - This region is set <b>height to 200px</b>")
				  .Region(Region.South)
		  ))
}
